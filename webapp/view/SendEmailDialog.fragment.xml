<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="sendEmailDialog" busy="{viewModel>/state/busy}" busyIndicatorDelay="0" title="Send Email">
		<content>
			<form:Form editable="true" width="80rem" binding="{viewModel>/sendEmailFields}" class="editableForm">
				<form:layout>
					<form:ResponsiveGridLayout labelSpanL="3" labelSpanM="3" emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1"/>
				</form:layout>
				<form:formContainers>
					<form:FormContainer>
						<form:formElements>
							<form:FormElement label="To">
								<form:fields>
									<Input type="Text" value="{viewModel>recipients/value}" valueState="{viewModel>recipients/valueState}"
										valueStateText="{viewModel>recipients/valueStateText}" change="validateSendEmail"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement label="CC">
								<form:fields>
									<Input type="Text" value="{viewModel>ccRecipients/value}" valueState="{viewModel>ccRecipients/valueState}"
										valueStateText="{viewModel>ccRecipients/valueStateText}" change="validateSendEmail"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement label="BCC">
								<form:fields>
									<Input type="Text" value="{viewModel>bccRecipients/value}" valueState="{viewModel>bccRecipients/valueState}"
										valueStateText="{viewModel>bccRecipients/valueStateText}" change="validateSendEmail"/>
								</form:fields>
						</form:FormElement>
						<form:FormElement label="Subject">
							<form:fields>
								<Input type="Text" value="{viewModel>subject/value}" valueState="{viewModel>subject/valueState}"
									valueStateText="{viewModel>subject/valueStateText}"/>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Body Text">
							<form:fields>
								<TextArea value="{viewModel>bodyText/value}" rows="10"/>
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
	</content>
	<beginButton>
		<Button press="closeSendEmailDialog" text="Cancel"/>
	</beginButton>
	<endButton>
		<Button type="Accept" press="sendEmail" text="Send" icon="sap-icon://email"/>
	</endButton>
</Dialog>
</core:FragmentDefinition>