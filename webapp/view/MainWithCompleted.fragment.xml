	<l:ResponsiveSplitter height="100%" defaultPane="topPane">
		<l:PaneContainer orientation="Vertical">
			<l:SplitPane id="topPane">
				<ScrollContainer height="100%" horizontal="false" vertical="true">
					<core:Fragment fragmentName="codan.zurgentboard.view.MainTable" type="XML"/>
          	<layoutData><l:SplitterLayoutData size="70%" /></layoutData>
				</ScrollContainer>
			</l:SplitPane>
			<l:SplitPane id="bottomPane">
				<ScrollContainer height="100%" horizontal="false" vertical="true">
					<core:Fragment fragmentName="codan.zurgentboard.view.CompletedTable" type="XML"/>
          <layoutData><l:SplitterLayoutData size="30%" /></layoutData>
				</ScrollContainer>
			</l:SplitPane>
		</l:PaneContainer>
	</l:ResponsiveSplitter>
</core:FragmentDefinition>